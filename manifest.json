{
	"manifest_version": 3,
	"name": "Simpliest notification checker (low memory)",
	"short_name": "Simpliest notification checker",
	"version": "2.7.7",
	"author": "Kaligula",

	"description": "This extension regularly checks your new notifications on Facebook. Uses very low computer memory!",
	"homepage_url": "https://github.com/Kaligula0/simpliest-notifications-for-chrome",
	"permissions": [
		"tabs",
		"alarms"
	],
	"host_permissions": [
		"https://mbasic.facebook.com/*"
	],

	"icons": {
		"16" : "images/icon-16.png",
		"48" : "images/icon-48.png",
		"96" : "images/icon-96.png",
		"128" : "images/icon-128.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_icon": "images/icon.png"
	},
	"options_page": "options.html"
}